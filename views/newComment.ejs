<%  include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add new Comment to
        <%= camp.name %></h1>
        <div style="width: 30%; margin:30px auto;">
            <form action="/camp/<%= camp._id %>/comments" method="POST">
            
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="writer" name="writer">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="text" name="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit!</button>
                </div>
            </form>
            <a href="/camp/:id">Go Back</a>
        </div>
            
    </div>
</div>    

<% include partials/footer %>