<% include partials/header %>


<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome to YelpCamp!</h1>
    <p>view our hand-picked campgrounds from all over the world  </p>
    <a href="camp/new" class="btn btn-primary btn-large">Add new Campgrounds</a>
    </div>
</header>
                            <!--here style used in div container below is to align images properly,we will see it later what it means-->
<div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% camp.forEach(function(camp){ %>
        <div class="col-md-3 col-small-6">
            <div class="thumbnail">
                <img src="<%= camp.image %>">
                <div class="caption">
                    <h4><%= camp.name %></h4>
                </div>
            </div>
                <!--very very important! see how we are using img tag and our % natation INSIDE double quotes  -->
                
        </div>
    <% }) %>
    </div>
</div>

<% include partials/footer %>